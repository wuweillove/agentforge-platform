# =================================
# AgentForge Platform Configuration
# =================================

# ---------------------------------
# Application Settings
# ---------------------------------
NODE_ENV=development
APP_NAME=AgentForge
APP_URL=http://localhost:3000
API_URL=http://localhost:4000
PORT=3000
API_PORT=4000
AGENT_ENGINE_PORT=5000

# ---------------------------------
# Database Configuration
# ---------------------------------
# PostgreSQL (Primary Database)
DATABASE_URL=postgresql://agentforge:password@localhost:5432/agentforge
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# MongoDB (Document Store)
MONGO_URL=mongodb://localhost:27017/agentforge
MONGO_DB_NAME=agentforge

# Redis (Cache & Queue)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ---------------------------------
# Authentication
# ---------------------------------
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000
JWT_SECRET=your-jwt-secret-change-this
JWT_EXPIRES_IN=7d

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ---------------------------------
# LLM Providers
# ---------------------------------
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=
OPENAI_MODEL_DEFAULT=gpt-4-turbo

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ANTHROPIC_MODEL_DEFAULT=claude-3-opus-20240229

# Google AI
GOOGLE_AI_API_KEY=your-google-ai-key
GOOGLE_MODEL_DEFAULT=gemini-pro

# Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=

# Local Models (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_DEFAULT=llama2

# ---------------------------------
# Vector Database
# ---------------------------------
# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_INDEX=agentforge

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ---------------------------------
# Memory System
# ---------------------------------
MEMORY_PROVIDER=memos  # memos, redis, custom
MEMOS_API_KEY=
MEMOS_ENDPOINT=

# ---------------------------------
# Messaging Platforms
# ---------------------------------
# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_SECRET=

# Discord
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# WhatsApp
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-token
SLACK_SIGNING_SECRET=

# ---------------------------------
# Object Storage
# ---------------------------------
# AWS S3 or MinIO
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=agentforge
S3_REGION=us-east-1

# ---------------------------------
# Monitoring & Logging
# ---------------------------------
# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # json, pretty

# Metrics
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# ---------------------------------
# Rate Limiting
# ---------------------------------
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ---------------------------------
# Email Service (Optional)
# ---------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@agentforge.dev

# ---------------------------------
# Queue Configuration
# ---------------------------------
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000  # milliseconds

# ---------------------------------
# Feature Flags
# ---------------------------------
FEATURE_VISUAL_BUILDER=true
FEATURE_MULTI_AGENT=true
FEATURE_MARKETPLACE=false
FEATURE_VOICE_AGENTS=false
FEATURE_ANALYTICS=true

# ---------------------------------
# Security
# ---------------------------------
CORS_ORIGIN=http://localhost:3000
CSRF_SECRET=your-csrf-secret
ENCRYPTION_KEY=your-32-character-encryption-key

# ---------------------------------
# Development Tools
# ---------------------------------
DEBUG=agentforge:*
ENABLE_PLAYGROUND=true
GRAPHQL_PLAYGROUND=true